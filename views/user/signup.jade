extends ../layout

block css
  link(rel='stylesheet', href='/user/style.css')

block content
  form#form-signup.form-signin
    .form-signin-header
      h4 创建新用户
    .form-signin-body
      .form-group
        label.control-label(for="name") 用户名
        input#name.form-control(required)
        p.text-danger(id='nameCheckMsg')
      .form-group
        label.control-label(for="email") E-mail
        input#email.form-control(type='email', required)
        p.text-danger(id='emailCheckMsg')
      .form-group.pass
        label.control-label(for="passwd1") 密码
        input#passwd1.form-control(type='password', required)
      .form-group.pass
        label.control-label(for="passwd2") 重复密码
        input#passwd2.form-control(type='password', required)
        p.text-danger(id='passCheckMsg')
      p.text-danger(id='msg')
      input#submit.btn.btn-default(type='submit', value="提交")

block js
  script(src="/user/main.js")